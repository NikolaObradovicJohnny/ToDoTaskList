<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="eu.execom.todolistgrouptwo">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:name=".TodoApplication_"
        android:icon="@mipmap/ic_launcher_todo"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activity.HomeActivity_" android:label="Home page | To do List">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.AddTaskActivity_" />
        <activity android:name=".activity.LoginActivity_" />
        <activity android:name=".activity.RegisterActivity_" />
        <activity android:name=".activity.TaskActivity_" />
    </application>

</manifest>